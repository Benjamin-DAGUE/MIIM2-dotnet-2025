{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "<Id du locataire>",
    "ClientId": "<Id de l'application'",
    "CallbackPath": "/signin-oidc",
    "AccessDeniedPath": null,
    "ClientCredentials": [
      {
        "SourceType": "ClientSecret",
        "ClientSecret": ""
      }
    ]
  },
  "WebAPI": {
    "Endpoint": "https://localhost:7146",
    "Scope": "api://<Id de l'application API>/access_as_user"
  }
}
